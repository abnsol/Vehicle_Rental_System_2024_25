{
  "compilerOptions": {
    "target": "esnext",                  // Output latest ECMAScript version
    "module": "esnext",                  // Use ES modules
    "moduleResolution": "node",          // Resolve modules like Node.js
    "strict": true,                      // Enable strict type-checking options
    "esModuleInterop": true,             // Enable interop between CommonJS and ES Modules
    "skipLibCheck": true,                // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,  // Enforce consistent casing for file names
    "baseUrl": "./",                     // Base directory for non-relative module imports
    "paths": {
      "@/*": ["src/*"]                   // Path alias for 'src/' directory
    }
  },
  "include": [
    "src/**/*"                           // Include all files in 'src' directory
  ]
}